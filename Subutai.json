{
  "name": "${envName}",
  "description": "example static website",
  "version": "2.0.0",
  "author": "github.com/samsonbek",
  "containers":[
    {
      "hostname":"web-apache",
      "template":"ubuntu16",
      "peer-criteria":"free peers",
      "size":"TINY",
      "port-mapping":[
        {
          "protocol":"http",
          "domain":"${domainName}",
          "external-port":"80",
          "internal-port":"80"
        }
      ]
    }
  ],
  "peer-criteria":[
    {
      "name": "free peers",
      "max-price": "0"
    }
  ],
  "ansible-configuration": {
    "source-url": "https://github.com/samsonbek/helloworld-bp/archive/master.zip",
    "ansible-playbook": "main.yaml",
    "extra-vars": [
      {
        "key": "htmlFileName",
        "value": "${filename}"
      },
      {
        "key": "htmlContent",
        "value": "test"
      }
    ],
    "groups": [
      {
        "name": "web-group",
        "hostnames": [ "web-apache" ]
      }
    ]
  },
  "user-variables":
  {
    "envName": {
      "description": "Enter environment name, must container only letters",
      "type": "string",
      "default": "HelloWWWorld",
      "validation": "[a-zA-Z]+"
    },
    "domainName": {
      "description": "Select domain name",
      "type": "domain",
      "default": "",
      "validation": "[a-zA-Z0-9]+"
    },
    "filename": {
      "description": "name of file in apache dir",
      "type": "string",
      "default": "about.html",
      "validation": "[a-zA-Z0-9.]+"
    }
  }
}